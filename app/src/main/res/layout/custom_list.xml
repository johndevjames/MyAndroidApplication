<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" 
 android:background="@drawable/edit_text_border2" 
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content" 
 android:layout_alignParentBottom="false">
    <TextView 

	android:textSize="14sp" 
	android:id="@+id/label2"
	android:paddingLeft="10dp" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="TextView" 
	android:layout_below="@+id/label3" 
	android:fontFamily="sans-serif-condensed" 
	android:textAlignment="center" 
	android:layout_alignParentStart="true" />

	<TextView

		android:id="@+id/label1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:fontFamily="sans-serif-condensed"
		android:paddingLeft="10dp"
		android:text="TextView"
		android:textSize="18sp"
		android:textStyle="bold" />
    <TextView 

	android:textSize="14sp" 
	android:id="@+id/label3" 
	android:paddingLeft="10dp" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="TextView" 
	android:layout_alignBaseline="@+id/label4" 
	android:layout_alignBottom="@+id/label4"
	android:fontFamily="sans-serif-condensed" 
	android:layout_toStartOf="@+id/label4" 
	android:layout_alignParentStart="true" />

	<TextView

		android:id="@+id/label4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/label1"
		android:layout_marginEnd="58dp"
		android:layout_marginTop="5dp"
		android:layout_toStartOf="@+id/button1"
		android:fontFamily="sans-serif-condensed"
		android:paddingLeft="10dp"
		android:text="TextView"
		android:textAlignment="center"
		android:textSize="14sp" />
    <TextView 

	android:textSize="14sp" 
	android:id="@+id/label5" 
	android:paddingLeft="10dp" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="TextView" 
	android:layout_below="@+id/label4" 
	android:fontFamily="sans-serif-condensed" 
	android:textAlignment="center" 
	android:layout_toEndOf="@+id/label3" />

	<Button
		android:id="@+id/button1"

		style="@style/Widget.AppCompat.Button.Small"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignTop="@+id/label3"
		android:background="@drawable/ic_action_navigation_close"
		android:focusable="false"
		android:focusableInTouchMode="false" />
</RelativeLayout>
