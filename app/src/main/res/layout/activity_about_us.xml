<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView34"
        style="style/Widget.Material.TextView.ListSeparator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/linearLayout2"
        android:layout_weight="0.29"
        android:background="@android:color/holo_red_dark"
        android:paddingLeft="20dp"
        android:text="Disclaimer"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <android.support.v7.widget.Toolbar
        android:theme="@style/AppTheme"
        android:id="@+id/toolbar"
        android:background="@color/maroonred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        app:titleTextColor="@color/apple_grey"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        style="style/Widget.Material.TextView.ListSeparator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.29"

        android:background="@android:color/holo_red_dark"
        android:paddingLeft="20dp"
        android:text="About US"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/l1"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:layout_alignParentStart="true">
            <TextView
                android:textSize="12sp"
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Company Name" />
            <TextView
                android:textSize="12sp"
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Address" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/l2"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:layout_alignParentStart="true">
            <TextView
                android:textSize="12sp"
                android:autoLink="web|email|phone|map|all"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Golden Software" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autoLink="map|all"
                android:text="K.P.K Tower, Kolencherry, Ernakulam District, Kerala, Pin 682311"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        style="style/Widget.Material.TextView.ListSeparator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_weight="0.29"

        android:background="@android:color/holo_red_dark"
        android:paddingLeft="20dp"
        android:text="Contact Information"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button26"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/l3"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:layout_alignParentStart="true">
            <TextView
                android:textSize="12sp"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Website" />
            <TextView
                android:textSize="12sp"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Email Address" />
            <TextView
                android:textSize="12sp"
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Mobile 1" />
            <TextView
                android:textSize="12sp"
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Mobile 2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/l4"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textView68"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:autoLink="web|all"
                android:text="www.goldensoftwareservices.com"
                android:textColor="@color/colorPrimaryDark"
                android:textColorLink="@color/colorAccent"
                android:textSize="12sp" />
            <TextView
                android:textSize="12sp"
                android:autoLink="email|all"
                android:id="@+id/textView67"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="vinodjohn2006@gmail.com" />
            <TextView
                android:textSize="12sp"
                android:autoLink="phone|all"
                android:id="@+id/textView69"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="+919447577781" />
            <TextView
                android:textSize="12sp"
                android:autoLink="phone|all"
                android:id="@+id/textView70"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="+919847820975" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button26"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_red_dark"
        android:text="Check Update"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView34"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView34"
            android:layout_marginTop="9dp"
            android:autoLink="web"
            android:clickable="true"
            android:linksClickable="true"
            android:onClick="privacy_click"
            android:text="@string/privacy_policy"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/textView18"

            android:autoLink="web"
            android:clickable="true"
            android:linksClickable="true"
            android:onClick="t_c_click"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
