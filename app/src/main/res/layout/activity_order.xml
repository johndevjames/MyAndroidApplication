<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/white_design_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/maroonred"

        android:theme="@style/AppTheme"

        app:titleTextColor="@color/apple_grey" />

    <ListView
        android:id="@+id/list_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView25"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dividerHeight="3dp" />

    <ListView
        android:id="@+id/list_main2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/narration"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dividerHeight="3dp" />

    <EditText

        android:id="@+id/inputSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar8"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/editText3"
        android:background="@drawable/search_text_border"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-condensed"
        android:hint="Search products..."
        android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|numberPassword|phone|date"
        android:paddingLeft="10dp"
        android:textSize="18sp" />
    <EditText

        android:textSize="18sp"
        android:id="@+id/editText3"
        android:background="@drawable/search_text_border"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Quantity.."
        android:cursorVisible="true"
        android:layout_below="@+id/toolbar8"
        android:inputType="number|numberSigned|numberDecimal|numberPassword|phone"
        android:fontFamily="sans-serif-condensed"
        android:layout_toStartOf="@+id/button7" />

    <Button
        android:id="@+id/button7"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_input_add"
        android:elevation="24dp"
        android:textSize="10sp"
        android:layout_below="@+id/toolbar8"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Products Details"
        android:layout_below="@+id/inputSearch"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true" />

    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/textView25"

        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Amount:"
        android:layout_alignParentBottom="true"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button8"

        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:background="@drawable/save_icon"
        android:textColor="@color/apple_grey"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_above="@+id/inputSearch"
        android:layout_alignStart="@+id/button22" />

    <Button
        android:id="@+id/button22"

        style="@android:style/Widget.DeviceDefault.Button.Small"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/textView"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@+id/editText3"
        android:background="@drawable/ic_action_navigation_close"
        android:elevation="24dp"
        android:fitsSystemWindows="false"
        android:layout_alignTop="@+id/inputSearch" />
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:id="@+id/textView37"

        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="Amount"
        android:layout_alignParentBottom="true"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/narration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView25"
        android:layout_alignEnd="@+id/list_main2"
        android:layout_alignStart="@+id/list_main2"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/search_text_border"
        android:ems="10"
        android:hint="Narration"
        android:inputType="text"
        android:paddingLeft="10dp" />
</RelativeLayout>
